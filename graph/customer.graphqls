type Customer {
  id: String!
  address: Address!
  balance: Int!
  created: Int!
  currency: String!
  email: String!
  livemode: Boolean!
  name: String!
  phone: String!
  subscriptions: [StripeSubscription!] 
  invoices: [Invoice!]
  paymentMethods(type: paymentMethodTypes = "card"): [PaymentMethod!]
}

type Address {
  city: String
  country: String
  line1: String
  line2: String
  postalCode: String
  state: String
}

input CustomerInput {
    name: String
    address: AddressInput
    description: String
    email: String
    phone: String
}

input AddressInput {
    city: String
    country: String
    postalCode: String
    line1: String
    line2: String
    state: String
}